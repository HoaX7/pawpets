<script>
  $(document).ready(function() {
    $('#myButton').click(function() {
      $(this).prop("disabled",true);
      $(this).html(
        `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Logging in`
      );
    var $this = $(this);
  $this.button('loading');
  setTimeout(function() {
    $('#myButton').prop("disabled",false);
      $this.html('Login');
    }, 2000);
});

});
</script>

